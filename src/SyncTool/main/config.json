{
  "Update": {
    "Enable": true,
    "Source": "GitHub",
    // the path to load updates from (needs to be compatible with the selected source)
    // in the value, environment variables can be used
    "Path": "https://www.github.com/ap0llo/synctool",
    "InstallPreReleaseVersions": true,

    // The interval between update checks
    // Format: (D).hh:mm:ss
    // defaut: 1 hour
    "Interval": "01:00:00"
  },

  "Git": {
    // The path used by the git implementation to store temporary data
    // default is %TEMP%
    // Usage of environment variables in the value is supported, e.g.
    // "TempPath" : "%SystemDrive%\Some Path"
  },
  "ApplicationData": {
    // The path used to store application data, default is %APPDATA%\SyncTool
    // Usage of environment variables in the value is supported, e.g.  "%APPDATA%\SyncTool"
    // "RootPath" :  ""
  },
  "Logging": {
    // enable/disable logging, default valus is true
    "Enable": true
  }
}