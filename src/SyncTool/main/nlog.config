<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>    
    <target xsi:type="File" name="file" fileName="${var:ApplicationDirectory}/logs/${shortdate}.log" 
            layout="${time} ${uppercase:${level}}: ${message} ${exception:format=tostring}"
            archiveFileName="${var:ApplicationDirectory}/logs/archive.{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            keepFileOpen="false" />  
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="file" />    
  </rules>

</nlog>